{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "providers": [
                "python"
            ]
        }
    },
    "deploy": {
        "startCommand": "python -m uvicorn main:app --host 0.0.0.0 --port 8080",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}